<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detailed_options"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.mazamacoffeeapp.DetailedOptions"
    android:orientation="vertical">



    <LinearLayout
    android:id="@+id/confirmButtonLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:weightSum="1">

    <TextView
        android:id="@+id/subtotal"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:gravity="center_vertical"
        android:text="@string/options_subtotal"
        android:textColor="@color/black"
        android:textSize="@dimen/material_body_size"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/toCart"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/material_button_size"
        android:textAllCaps="true"
        android:onClick="next" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/confirmButtonLayout">
        <LinearLayout
            android:id="@+id/options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

